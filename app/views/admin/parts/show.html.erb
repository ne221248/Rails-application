<% @page_title = "パーツの詳細" %>
<h1><%= @page_title %></h1>

<div class="toolbar">
  <p><%= link_to "パーツ一覧に戻る", :admin_parts %></p>
  <p><%= link_to "#{@part.name}を編集する", [:edit, :admin, @part] %></p>
</div>

<% if @part.present? %>
  <table class="attr">
    <thead>
      <tr>
        <th>パーツ名</th>
        <th>金額</th>
        <th>タイプ</th>
        <th>グループ</th>
        <th>在庫</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td style="text-align: right"><%= @part.name %></td>
          <td><%= @part.price %></td>
          <td><%= part_type(@part) %></td>
          <td><%= @part.group %></td>
          <td><%= @part.inventory %></td>
        </tr>
    </tbody>
  </table>
<% else %>
  <p>パーツの情報がありません。</p>
<% end %>
<% @page_title = "パーツ管理" %>
<h1><%= @page_title %></h1>

<%= form_tag :search_admin_parts, method: :get, class: "search" do %>
  <%= select_tag "q", options_for_select(["指定なし", "CPU", "OS", "GPU", "ケース", "メモリ", "ストレージ", "マザーボード", "冷却機", "電源", "光学ドライブ"], selected: "指定なし") %>
  在庫数<%= text_field_tag "u", params[:u] || "指定なし" %>
  <%= submit_tag "検索" %>
<% end %>

<div class="toolbar">
    <p><%= link_to "パーツの新規登録", :new_admin_part %></p>
</div>

<% if @parts.present? %>
  <table class="attr">
    <thead>
      <tr>
        <th>パーツ名</th>
        <th>金額</th>
        <th>タイプ</th>
        <th>グループ</th>
        <th>在庫</th>
      </tr>
    </thead>
    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td style="text-align: right"><%= link_to part.name , [:admin, part] %></td>
          <td><%= part.price %></td>
          <td><%= part_type(part) %></td>
          <td><%= part.group %></td>
          <td><%= part.inventory %></td>
          <td>
            <%= link_to "編集", [:edit, :admin, part] %> |
            <%= link_to "削除", [:admin, part], method: :delete,
            data: { confirm: "本当に削除しますか？" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- ページネーション -->
<% else %>
  <p>パーツの情報がありません。</p>
<% end %>
<%= render "shared/errors", obj: @member %>

<table class="attr">
  <tr>
    <th><%= form.label :name, "ユーザ名" %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th><%= form.label :name, "メールアドレス" %></th>
    <td><%= form.text_field :mail %></td>
  </tr>
  <tr>
    <th><%= form.label :name, "住所" %></th>
    <td><%= form.text_field :address %></td>
  </tr>
  <tr>
    <th><%= form.label :name, "電話番号" %></th>
    <td><%= form.text_field :telephone %></td>
  </tr>
  <% if @member.new_record? %>
    <tr>
      <th><%= form.label :password, "パスワード" %></th>
      <td><%= form.text_field :password %></td>
    </tr>
  <% end %>
</table>
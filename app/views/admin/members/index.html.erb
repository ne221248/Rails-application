<% @page_title = "ユーザ一覧" %>
<h1><%= @page_title %></h1>

<div class="toolbar">
    <p><%= link_to "ユーザの新規登録", :new_admin_member %></p>
</div>

<% if @members.present? %>
  <table class="list">
    <thead>
      <tr>
        <th></th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>住所</th>
        <th>電話番号<th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td style="text-align: right"><%= member.id %></td>
          <td><%= link_to member.name, [:admin, member] %></td>
          <td><%= member.mail %></td>
          <td><%= member.address %></td>
          <td><%= member.telephone %></td>
          <td>
            <%= link_to "編集", [:edit, :admin, member] %> |
            <%= link_to "削除", [:admin, member], method: :delete,
            data: { confirm: "本当に削除しますか？" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- ページネーション -->
<% else %>
  <p>会員情報がありません。</p>
<% end %>

<% @page_title = "プラン一覧" %>
<h1><%= @page_title %></h1>

<%= form_tag :search_plans, method: :get, class: "serch" do %>
  <%= select_tag "q", options_for_select(["指定なし", "10万~20万", "20万~30万", "30万~"], selected: "指定なし") %>
  <%= select_tag "u", options_for_select(["指定なし", "エントリー", "ミドル", "ハイエンド"], selected: "指定なし") %>
  <%= submit_tag "検索" %>
<% end %>

<% if @plans.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>プラン名</th>
        <th>おすすめのユーザ</th>
        <th>説明</th>
        <th>合計金額</th>
      </tr>
    </thead>
    <tbody>
      <% @plans.each do |plan| %>
        <tr>
          <td style="text-align: right"><%= link_to plan.name , plan %></td>
          <td><%= plan.usertype %></td>
          <td><%= plan.description %></td>
          <td><%= plan.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- ページネーション入れてもいいかも -->
<% else %>
  <p>プラン情報がありません。</p>
<% end %>
<% @page_title = "プランの詳細" %>
<h1><%= @page_title %></h1>

<% if @plan.sale == true %>
  <div class="toolbar">
      <p><%= link_to "#{@plan.name}をカートに追加する", new_plan_cart_path(@plan) %></p>
  </div>
<% else %>
  <p>在庫がないため、プランを追加できません</p>
<% end %>

<% if @parts.present? %>
  <table class="attr">
    <thead>
      <tr>
        <th>タイプ</th>
        <th>パーツ名</th>
        <th>金額</th>
      </tr>
    </thead>
    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td style="text-align: center"><%= part_type(part) %></td>
          <td style="text-align: center"><%= part.name %></td>
          <td style="text-align: center"><%= part.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>パーツの情報がありません。></p>
<% end %>



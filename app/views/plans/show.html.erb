<% @page_title = "プランの詳細" %>
<h1><%= @page_title %></h1>

<div class="toolbar">
    <p><%= @plan.name %>　<%= link_to "編集", edit_plan_cart_path(@plan) %></p>
</div>

<% if @parts.present? %>
  <table class="attr">
    <thead>
      <tr>
        <th>パーツ名</th>
        <th>金額</th>
        <th>タイプ</th>
        <th>グループ</th>
        <th>在庫</th>
      </tr>
    </thead>
    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td style="text-align: right"><%= link_to part.name , @plan %></td>
          <td><%= part.price %></td>
          <td><%= part_type(part) %></td>
          <td><%= part.group %></td>
          <td><%= part.inventory %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>パーツの情報がありません。<%= @plan.name %></p>
<% end %>

<div class="toolbar">
    <p><%= link_to "Top", Plan %></p>
</div>

<% @page_title = "管理者用ログインページ" %>
<h1><%= "管理者用ログインページ" %></h1>

<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag [:admin, :session], id: "login-form" do %>
  <div>
    <label>ユーザー名：</label>
    <input type="text" name="name">
  </div>
  <div>
    <label>パスワード：</label>
    <input type="password" name="password">
  </div>
  <div>
    <input type="submit" value="ログイン">
  </div>
<% end %>
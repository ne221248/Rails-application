<% @page_title = "予約一覧" %>
<h1><%= @page_title %></h1>

<% if @orders.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>予約No.</th>
        <th>金額</th>
        <th>予約ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td style="text-align: center"><%= link_to order.id, [:operator, order] %></td>
        <td style="text-align: center"><%= order.amount %></td>
        <td style="text-align: center"><%= order.status %></td>
        <td>
              <%= link_to "予約ステータスを編集する", [:edit, :operator, order] %>    
        </td>
      </tr>
  <% end %>
    </tbody>
  </table>
<% else %>
  <p>予約情報がありません。</p>
<% end %>

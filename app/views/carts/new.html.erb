<% @page_title = "カートに追加" %>
<h2><%= "#{@plan.name}を#{@page_title}しますか？" %></h2>
<%= link_to "追加する", cart_path, method: :post %>

<% @configurations.each do |configuration| %>
    <%= configuration.id %>
<%= configuration.part_id %>
<%= configuration.cart_id %>
<%= configuration.plan_id %>
<br>
<% end %>

<% if @parts.present? %>
  <br>
  <h3>プランの詳細</h3>
  <table class="attr">
    <thead>
      <tr>
        <th>パーツ名</th>
        <th>金額</th>
        <th>タイプ</th>
        <th>グループ</th>
        <th>在庫</th>
      </tr>
    </thead>
    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td style="text-align: right"><%= part.name %></td>
          <td><%= part.price %></td>
          <td><%= part_type(part) %></td>
          <td><%= part.group %></td>
          <td><%= part.inventory %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>パーツの情報がありません。<%= @plan.name %></p>
<% end %>
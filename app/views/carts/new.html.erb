<% @page_title = "カートに追加" %>
<h3><%= "#{@plan.name}を#{@page_title}しますか？" %>
<%= link_to "追加する", cart_path, method: :post %></h3>

<% if @configurations.present? %>
  <br>
  <br>
  <h2>プランの詳細</h2>
  <table class="attr">
    <thead>
      <tr>
        <th>タイプ</th>
        <th>パーツ名</th>
        <th>金額</th>
      </tr>
    </thead>
    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td style="text-align: center"><%= part_type(part) %></td>
          <td style="text-align: center"><%= part.name %></td>
          <td style="text-align: center"><%= part.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>パーツの情報がありません。<%= @plan.name %></p>
<% end %>
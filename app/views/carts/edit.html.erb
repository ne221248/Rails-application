<% if @plan.present? %>
  <% @page_title = "パーツ変更" %>
  <h1><%= "#{@plan.name}の#{@page_title}" %></h1>

  <div class="toolbar"><%= link_to "プランの詳細に戻る", plan_path(@plan) %></div>

<% else %>
  <% @page_title = "カートの内容の変更" %>
  <h1><%= @page_title %></h1>
  <div class="toolbar"><%= link_to "カートの詳細に戻る", cart_path %></div>
<% end %>


<% if @configurations.present? %>
  <table class="attr">
    <thead>
      <tr>
        <th>パーツ名</th>
        <th>金額</th>
        <th>タイプ</th>
        <th>グループ</th>
        <th>在庫</th>
      </tr>
    </thead>
    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td style="text-align: right"><%= part.name %></td>
          <td><%= part.price %></td>
          <td><%= part_type(part) %></td>
          <td><%= part.group %></td>
          <td><%= part.inventory %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>パーツの情報がありません。<%= @plan.name %></p>
<% end %>

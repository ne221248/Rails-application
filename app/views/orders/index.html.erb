<% @page_title = "予約一覧" %>
<h2><%= "#{@member.name}の#{@page_title}" %></h2>

<% if @orders.present? %>
<table class="attr">
    <thead>
    <tr>
        <th>パーツ名</th>
        <th>金額</th>
        <th>タイプ</th>
        <th>グループ</th>
        <th>在庫</th>
    </tr>
    </thead>
    <tbody>
    <% @parts.each do |part| %>
        <tr>
        <td style="text-align: right"><%= part.name %></td>
        <td><%= part.price %></td>
        <td><%= part_type(part) %></td>
        <td><%= part.group %></td>
        <td><%= part.inventory %></td>
        </tr>
    <% end %>
    </tbody>
<% else %>
 <p>予約が存在しません</p>
<% end %>



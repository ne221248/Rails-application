<% @page_title = "予約一覧" %>
<h2><%= "#{@member.name}の#{@page_title}" %></h2>

<% if @orders.present? %>
    <table class="attr">
        <thead>
        <tr>
            <th>予約No.</th>
            <th>金額</th>
            <th>予約ステータス</th>
        </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
            <tr>
            <td style="text-align: center"><%= link_to order.id , order %></td>
            <td style="text-align: center"><%= order.amount %></td>
            <td style="text-align: center"><%= order.status %></td>
            <td>
                <% if order.status == "予約済み" %>
                    <%= link_to "予約を削除", order, method: :delete,
                        data: { confirm: "本当に削除しますか？" } %>    
                <% end %>
            </td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% else %>
    <p>予約が存在しません</p>
<% end %>



<% @page_title = "予約を確定" %>
<h2><%= "以下の内容で#{@page_title}しますか？" %></h2>

<%= link_to "確定する", orders_path, method: :post %>

<div class="toolbar"><%= link_to "カートの詳細に戻る", cart_path %></div>

<% if @parts.present? %>
  <br>
  <br>
  <h3>プランの詳細</h3>
  <table class="attr">
    <thead>
      <tr>
        <th>タイプ</th>
        <th>パーツ名</th>
        <th>金額</th>
      </tr>
    </thead>
    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td style="text-align: center"><%= part_type(part) %></td>
          <td style="text-align: center"><%= part.name %></td>
          <td style="text-align: center"><%= part.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>パーツの情報がありません。<%= @plan.name %></p>
<% end %>